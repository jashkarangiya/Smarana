{
  "manifest_version": 3,
  "name": "Smarana Companion",
  "version": "1.0.0",
  "description": "Overlay your Smarana notes and saved solutions on supported coding problem pages.",
  "icons": {
    "16": "icons/smarana-16.png",
    "32": "icons/smarana-32.png",
    "48": "icons/smarana-48.png",
    "128": "icons/smarana-128.png"
  },
  "action": {
    "default_title": "Smarana",
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/smarana-16.png",
      "32": "icons/smarana-32.png",
      "48": "icons/smarana-48.png",
      "128": "icons/smarana-128.png"
    }
  },
  "permissions": [
    "storage"
  ],
  "host_permissions": [
    "https://www.smarana.io/*",
    "https://leetcode.com/*",
    "https://codeforces.com/*",
    "https://atcoder.jp/*",
    "https://www.codechef.com/*",
    "https://codechef.com/*"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": [
        "https://leetcode.com/problems/*",
        "https://*.leetcode.com/problems/*",
        "https://codeforces.com/contest/*/problem/*",
        "https://codeforces.com/problemset/problem/*",
        "https://codeforces.com/gym/*/problem/*",
        "https://codeforces.com/group/*/contest/*/problem/*",
        "https://www.codeforces.com/contest/*/problem/*",
        "https://www.codeforces.com/problemset/problem/*",
        "https://www.codeforces.com/gym/*/problem/*",
        "https://www.codeforces.com/group/*/contest/*/problem/*",
        "https://atcoder.jp/contests/*/tasks/*",
        "https://www.codechef.com/problems/*",
        "https://codechef.com/problems/*"
      ],
      "js": [
        "content.js"
      ],
      "css": [
        "content.css"
      ],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "icons/*",
        "fonts/*",
        "assets/*"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ]
}