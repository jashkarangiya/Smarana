generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
}

// Enums for PostgreSQL
enum ProfileVisibility {
  PUBLIC
  FRIENDS_ONLY
  PRIVATE
}

enum NotificationType {
  FRIEND_REQUEST_RECEIVED
  FRIEND_REQUEST_ACCEPTED
  SYSTEM
}

enum FriendRequestStatus {
  PENDING
  ACCEPTED
  DECLINED
}

enum LeetCodeAuthType {
  PUBLIC
  COOKIE
  EXTENSION
  UPLOAD
}

enum SyncStatus {
  OK
  ERROR
  SYNCING
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model User {
  id                 String    @id @default(cuid())
  name               String?
  email              String?   @unique
  emailVerified      DateTime?
  passwordHash       String?
  passwordUpdatedAt  DateTime?
  image              String?
  bio                String?   @db.VarChar(160)
  timezone           String?   @default("UTC")
  username           String?   @unique
  usernameLower      String?   @unique
  usernameChangedAt  DateTime?
  usernameChangeCount Int      @default(0)
  leetcodeUsername   String?
  codeforcesUsername String?
  codechefUsername   String?
  atcoderUsername    String?
  xp                 Int       @default(0)
  level              Int       @default(1)
  createdAt          DateTime  @default(now())
  updatedAt          DateTime  @updatedAt

  accounts    Account[]
  sessions    Session[]
  problems    RevisionProblem[]
  reviewLogs  ReviewLog[]
  reviewEvents ReviewEvent[]

  // Privacy Settings
  profileVisibility       String  @default("PUBLIC") // "PUBLIC" | "FRIENDS_ONLY" | "PRIVATE"
  showStreakToPublic      Boolean @default(true)
  showStreakToFriends     Boolean @default(true)
  showPlatformsToPublic   Boolean @default(true)
  showPlatformsToFriends  Boolean @default(true)
  showBioPublicly         Boolean @default(true)
  showTimezoneToPublic    Boolean @default(false)
  showTimezoneToFriends   Boolean @default(true)

  // Deprecated - migrate to profileVisibility
  isProfilePublic      Boolean   @default(true)
  showStreakPublicly   Boolean   @default(true)
  showLeetCodePublicly Boolean   @default(true)

  stats       UserStats?

  sentFriendRequests     FriendRequest[] @relation("Sender")
  receivedFriendRequests FriendRequest[] @relation("Receiver")

  friendsAsUser   Friendship[] @relation("UserAsUser")
  friendsAsFriend Friendship[] @relation("UserAsFriend")

  pomodoroSettings PomodoroSettings?

  leetcodeAccount      LeetCodeAccount?
  leetcodeSubmissions  LeetCodeSubmission[]
  passwordResetTokens  PasswordResetToken[]

  notifications        Notification[]
  actorNotifications   Notification[] @relation("NotificationActor")
  platformVerifications PlatformVerification[]
  suggestions          ResourceSuggestion[]

  // Extension
  showSolutionInExtension Boolean @default(true)
  extensionTokens         ExtensionToken[]
  extensionAuthCodes      ExtensionAuthCode[]

  @@index([usernameLower])
}

model ReviewEvent {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  problemId String
  problem   RevisionProblem @relation(fields: [problemId], references: [id], onDelete: Cascade)

  rating    Int      // 1-5
  interval  Int      // New interval in days
  xpEarned  Int      @default(0)
  
  reviewedAt DateTime @default(now())

  @@index([userId, reviewedAt])
}



model PomodoroSettings {
  id        String   @id @default(cuid())
  userId    String   @unique
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  focusDuration       Int     @default(25) // minutes
  shortBreakDuration  Int     @default(5)
  longBreakDuration   Int     @default(15)
  longBreakInterval   Int     @default(4) // cycles before long break
  
  autoStartBreaks     Boolean @default(false)
  autoStartPomodoros  Boolean @default(false)
  
  updatedAt DateTime @updatedAt
}

model FriendRequest {
  id        String   @id @default(cuid())
  senderId  String
  sender    User     @relation("Sender", fields: [senderId], references: [id], onDelete: Cascade)
  receiverId String
  receiver  User     @relation("Receiver", fields: [receiverId], references: [id], onDelete: Cascade)
  status    String   @default("PENDING") // PENDING, ACCEPTED, DECLINED
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([senderId, receiverId])
  @@index([receiverId])
}

model Friendship {
  id        String   @id @default(cuid())
  
  userId    String
  user      User     @relation("UserAsUser", fields: [userId], references: [id], onDelete: Cascade)
  
  friendId  String
  friend    User     @relation("UserAsFriend", fields: [friendId], references: [id], onDelete: Cascade)
  
  createdAt DateTime @default(now())

  @@unique([userId, friendId])
  @@index([userId])
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model RevisionProblem {
  id               String   @id @default(cuid())
  userId           String
  user             User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  platform         String   @default("leetcode")
  problemSlug      String
  title            String
  difficulty       String
  url              String
  firstSolvedAt    DateTime
  lastSolvedAt     DateTime
  nextReviewAt     DateTime
  interval         Int      @default(0)
  reviewCount      Int      @default(0)
  lastReviewedAt   DateTime?
  notes            String?  @default("")
  solution         String?  @default("")

  // Latest solution metadata (for quick access)
  latestAcceptedSubmissionId String?
  latestSolutionLang         String?
  latestSolutionFetchedAt    DateTime?

  createdAt        DateTime @default(now())
  reviewEvents     ReviewEvent[]
  updatedAt        DateTime @updatedAt

  @@unique([userId, platform, problemSlug])
  // Performance Indexes for Dashboard & Stats
  @@index([userId, nextReviewAt])
  @@index([userId, lastReviewedAt])
  @@index([userId, firstSolvedAt])
}

model ReviewLog {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  day       String   // YYYY-MM-DD for uniqueness
  createdAt DateTime @default(now())
  
  count     Int      @default(1)
  xpEarned  Int      @default(0)

  @@unique([userId, day])
}

model UserStats {
  id              String   @id @default(cuid())
  userId          String   @unique
  user            User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  currentStreak   Int      @default(0)
  longestStreak   Int      @default(0)
  totalReviews    Int      @default(0)
  problemsTracked Int      @default(0)
  lastReviewedAt  DateTime?

  // Weekly stats (reset via job or computed)
  reviewsThisWeek Int      @default(0)

  // External Platform Activity (JSON)
  // Stores raw submission calendar: { "timestamp_seconds": count }
  leetcodeActivity String?

  // Gamification
  unlockedAchievements String[] @default([])

  updatedAt       DateTime @updatedAt
}

model LeetCodeAccount {
  id            String   @id @default(cuid())
  userId        String   @unique
  user          User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  username      String
  authType      String   @default("PUBLIC") // "PUBLIC" | "COOKIE" | "EXTENSION" | "UPLOAD"
  lastSyncedAt  DateTime?
  syncStatus    String?  @default("OK") // "OK" | "ERROR" | "SYNCING"
  syncError     String?

  // For future cookie-based sync (encrypted):
  // encryptedSessionCookie String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([userId])
}

model LeetCodeSubmission {
  id            String   @id @default(cuid())
  userId        String
  user          User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  submissionId  String   // LeetCode submission id
  problemSlug   String
  problemTitle  String?
  status        String   // ACCEPTED, WRONG_ANSWER, etc
  lang          String?
  code          String?  // store if user enabled "store solutions"
  runtime       String?
  memory        String?
  submittedAt   DateTime

  createdAt     DateTime @default(now())

  @@unique([userId, submissionId])
  @@index([userId, submittedAt])
  @@index([userId, problemSlug, submittedAt])
}

model PasswordResetToken {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  tokenHash String   @unique
  expiresAt DateTime
  usedAt    DateTime?

  createdAt DateTime @default(now())

  @@index([userId, expiresAt])
}

model Notification {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  type      String   // "FRIEND_REQUEST_RECEIVED" | "FRIEND_REQUEST_ACCEPTED" | "SYSTEM"
  actorId   String?
  actor     User?    @relation("NotificationActor", fields: [actorId], references: [id], onDelete: SetNull)

  title     String
  body      String?
  href      String?   // where to send the user when they click
  readAt    DateTime?
  createdAt DateTime  @default(now())

  @@index([userId, readAt, createdAt])
}

// Platform verification for ownership proof
model PlatformVerification {
  id                String    @id @default(cuid())
  userId            String
  platform          String    // "leetcode" | "codeforces" | "codechef" | "atcoder"
  username          String
  verificationToken String
  tokenExpiresAt    DateTime
  isVerified        Boolean   @default(false)
  verifiedAt        DateTime?
  createdAt         DateTime  @default(now())
  updatedAt         DateTime  @updatedAt

  user              User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, platform])
  @@index([verificationToken])
}

model ResourceSuggestion {
  id            String   @id @default(cuid())

  userId        String
  user          User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  title         String
  url           String
  urlNormalized String   @unique // prevents duplicates across all users
  category      String   // SHEET | PLAYLIST | ARTICLE | TOOL | COURSE
  note          String?  // optional: why it's useful / what it covers

  status        String   @default("PENDING") // PENDING | APPROVED | REJECTED
  adminNote     String?
  reviewedAt    DateTime?

  createdAt     DateTime @default(now())

  @@index([status, createdAt])
  @@index([userId, createdAt])
}

// Extension authentication - device-style token auth
model ExtensionToken {
  id           String    @id @default(cuid())
  userId       String
  user         User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  accessToken  String    @unique
  refreshToken String    @unique
  expiresAt    DateTime
  createdAt    DateTime  @default(now())
  lastUsedAt   DateTime?

  @@index([userId])
  @@index([accessToken])
  @@index([refreshToken])
}

// One-time authorization codes for extension connect flow
model ExtensionAuthCode {
  id        String    @id @default(cuid())
  userId    String
  user      User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  code      String    @unique
  state     String    // State from extension for verification
  expiresAt DateTime
  usedAt    DateTime?
  createdAt DateTime  @default(now())

  @@index([code])
  @@index([expiresAt])
}

// Contest metadata from platforms
model Contest {
  id          String    @id @default(cuid())
  platform    String    // "leetcode" | "codeforces" | "atcoder" | "codechef"
  contestId   String    // Platform's contest identifier
  name        String
  startTime   DateTime
  endTime     DateTime?
  duration    Int?      // Duration in minutes
  url         String
  phase       String    @default("BEFORE") // "BEFORE" | "CODING" | "FINISHED"
  updatedAt   DateTime  @updatedAt
  createdAt   DateTime  @default(now())

  reminders   ContestReminder[]

  @@unique([platform, contestId])
  @@index([platform, startTime])
  @@index([startTime])
}

// User contest reminders
model ContestReminder {
  id          String    @id @default(cuid())
  userId      String
  contestId   String
  contest     Contest   @relation(fields: [contestId], references: [id], onDelete: Cascade)
  notifyAt    DateTime  // When to send the reminder
  notified    Boolean   @default(false)
  createdAt   DateTime  @default(now())

  @@unique([userId, contestId])
  @@index([userId, notifyAt])
  @@index([notifyAt, notified])
}

// User contest participation results
model ContestResult {
  id          String    @id @default(cuid())
  userId      String
  platform    String    // "leetcode" | "codeforces" | "atcoder" | "codechef"
  contestId   String    // Platform's contest identifier
  contestName String?
  rank        Int?
  oldRating   Int?
  newRating   Int?
  delta       Int?      // Rating change
  attendedAt  DateTime
  createdAt   DateTime  @default(now())

  @@unique([userId, platform, contestId])
  @@index([userId, platform, attendedAt])
  @@index([userId, attendedAt])
}

