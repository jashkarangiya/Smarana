generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model User {
  id                 String    @id @default(cuid())
  name               String?
  email              String?   @unique
  emailVerified      DateTime?
  password           String?
  image              String?
  username           String?   @unique
  usernameChangedAt  DateTime?
  leetcodeUsername   String?
  codeforcesUsername String?
  codechefUsername   String?
  atcoderUsername    String?
  xp                 Int       @default(0)
  createdAt          DateTime  @default(now())
  updatedAt          DateTime  @updatedAt

  accounts    Account[]
  sessions    Session[]
  problems    RevisionProblem[]
  reviewLogs  ReviewLog[]
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model RevisionProblem {
  id               String   @id @default(cuid())
  userId           String
  user             User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  platform         String   @default("leetcode")
  problemSlug      String
  title            String
  difficulty       String
  url              String
  firstSolvedAt    DateTime
  lastSolvedAt     DateTime
  nextReviewAt     DateTime
  reviewCount      Int      @default(0)
  notes            String?  @default("")
  solution         String?  @default("")
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt

  @@unique([userId, platform, problemSlug])
}

model ReviewLog {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  date      DateTime @default(now())
  count     Int      @default(1)
  xpEarned  Int      @default(0)

  @@unique([userId, date])
}
